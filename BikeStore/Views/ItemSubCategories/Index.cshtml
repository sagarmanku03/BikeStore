@model IEnumerable<BikeStore.Models.ItemSubCategory>

@{
    ViewData["Title"] = "Index";
}
<section>
    <img src="~/images/admin.png" class="img-fluid" />
</section>
<div class="container">
    <div class="text-center">
        <h1 class="display-4">Item Sub Category Operations</h1>
        <p>View All Item Sub Category</p>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-dark">Add New Item Sub Category</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Photo
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemSubCategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemCategory)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:30%">
                        <img src="~/subs/@item.ItemSubCategoryID@item.Extension" class="img-fluid" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemSubCategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemCategory.ItemCategoryName)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.ItemSubCategoryID">Edit</a>
                        </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ItemSubCategoryID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>