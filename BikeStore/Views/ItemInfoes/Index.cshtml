@model IEnumerable<BikeStore.Models.ItemInfo>

@{
    ViewData["Title"] = "Index";
}
<section>
    <img src="~/images/admin.png" class="img-fluid" />
</section>
<div class="container">
    <div class="text-center">
        <h1 class="display-4">Item Info Operations</h1>
        <p>View All Item</p>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-dark">Add New Item Info</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Item Photo
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemSubCategory.ItemSubCategoryName)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:20%">
                        <img src="~/items/@item.ItemID@item.Extension" class="img-fluid"/>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemSubCategory.ItemSubCategoryName)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.ItemID">Edit</a>
                        </td>
                    <td>
                        <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.ItemID">Details</a>
                    </td>
                    <td>
                        <a asp-action="Delete"  class="btn btn-danger" asp-route-id="@item.ItemID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>