@model BikeStore.Models.ItemCategory

@{
    ViewData["Title"] = "Delete";
}
<section>
    <img src="~/images/admin.png" class="img-fluid" />
</section>
<div class="container">
    <div class="text-center">
        <h1 class="display-4">Item Category Operations</h1>
        <p>Delete Item Category</p>
    </div>
    <p>
        <a asp-action="Index" class="btn btn-dark">Back To List</a>
    </p>
    <hr />
