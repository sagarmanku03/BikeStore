@model IEnumerable<BikeStore.Models.ItemCategory>

@{
    ViewData["Title"] = "Index";
}

<section>
    <img src="~/images/admin.png" class="img-fluid" />
</section>
<div class="container">
    <div class="text-center">
        <h1 class="display-4">Item Category Operations</h1>
        <p>View All Item Category</p>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-dark">Add New Item Category</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ItemCategoryName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemCategoryName)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.ItemCategoryID">Edit</a> 
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ItemCategoryID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>