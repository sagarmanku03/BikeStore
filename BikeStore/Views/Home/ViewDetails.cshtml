@model BikeStore.Models.ItemInfo

@{
    ViewData["Title"] = "ViewDetails";
}

<section>
    <img src="~/images/mix.png" class="img-fluid" />
</section>
<div class="container mb-3">
    <div class="text-center">
        <h1 class="display-4">(@Model.ItemName)</h1>
        <p>Price: $ @Model.ItemPrice</p>
    </div>
    <div class="row mb-3">
        <div class="col-md-8">
            <div id="accordion" class="mb-3">
                <div class="card">
                    <div class="card-header">
                        <a class="card-link" data-toggle="collapse" href="#collapse1">
                            Description
                        </a>
                    </div>
                    <div id="collapse1" class="collapse" data-parent="#accordion">
                        <div class="card-body">
                            @Model.ItemDescription
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <a class="card-link" data-toggle="collapse" href="#collapse2">
                            Feature
                        </a>
                    </div>
                    <div id="collapse2" class="collapse" data-parent="#accordion">
                        <div class="card-body">
                            @Model.ItemFeature
                        </div>
                    </div>
                </div>
            </div>
            <a class="btn btn-dark text-white btn-block" asp-area="" asp-controller="Home"
                   asp-action="AddToCart" asp-route-id="@Model.ItemID"><i class="fa fa-shopping-cart"></i> Add To Cart</a>
        </div>
        <div class="card col-md-4">
            <img class="card-img-top" src="~/items/@Model.ItemID@Model.Extension" alt="@Model.ItemName" style="width:100%">
        </div>
    </div>
</div>