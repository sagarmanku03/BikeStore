@model BikeStore.Models.CartInfo

@{
    ViewData["Title"] = "MyCart";
}

<section>
    <img src="~/images/mix.png" class="img-fluid" />
</section>
<div class="container">
    <div class="text-center">
        <h1 class="display-4">My Cart</h1>
    </div>
    <div class="row">
        @if (Model == null || Model.CartCartItems == null || Model.CartCartItems.Count == 0)
        {
            <div class="col-md-12">
                <h1>There is No Items in Cart.</h1>
            </div>
        }
        else
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Item Photo
                        </th>
                        <th>
                            Item Name
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Total Price
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartCartItems)
                    {
                    <tr>
                        <td style="width:30%">
                            <img  src="~/items/@item.ItemInfo.ItemID@item.ItemInfo.Extension" class="img-fluid" />
                        </td>
                        <td>@item.ItemInfo.ItemName</td>
                        <td>$ @item.Price</td>
                        <td>@item.Quantity</td>
                        <td >$ @item.Total</td>
                        <td>
                            <a class="btn btn-danger" asp-action="DeleteCartItem" asp-controller="Home" asp-route-id="@item.CartItemID"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    }
                    <tr>
                        <td colspan="4" align="right">
                            Grand Total:
                        </td>
                        <td colspan="2">
                            $ @ViewData["Total"]
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6" align="center">
                            <a asp-action="Checkout" asp-controller="Home" asp-route-id="@Model.CartID" class="btn btn-dark text-white"><i class="fa fa-shopping-cart"></i> Checkout</a>
                        </td>
                    </tr>
                </tbody>
            </table>
            }
        </div>
</div>

